    <div id="div2_1" onclick="show1()"></div>
    <div id="div2_2" onclick="show2()"></div>
  </div>

  <!-- 点击按钮，改变text的value值 -->
  <div id="div3">
    <input type="text" value="aa" id="div3_1" title="aa" />
    <input type="button" value="Click" onclick="show3()" />
  </div>

  <!-- 点击按钮，改变宽高及颜色 -->
  <div id="div4">
    <div id="div4_1"></div>
    <input type="button" value="Click" onclick="change()" />
  </div>

  <!-- div的显示隐藏 -->
  <div id="div5">
    <input type="button" value="显示隐藏" onclick="none()" />
    <div id="div5_1"></div>
  </div>

  <!-- 全选不选与反选 -->
